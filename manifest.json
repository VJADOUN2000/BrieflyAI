{
  "manifest_version": 3,
  "name": "Briefly AI",
  "version": "1.0",
  "description": "Briefly AI: Summarize Slack or WhatsApp chats using Chrome's on-device AI or local fallback function.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://*.slack.com/*",
    "https://web.whatsapp.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.slack.com/*",
        "https://web.whatsapp.com/*"
      ],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ]
}
